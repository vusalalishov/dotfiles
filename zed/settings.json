{
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "features": {
    "copilot": false
  },
  "vim_mode": true,
  "scroll_beyond_last_line": "off",
  "restore_on_startup": "none",
  "buffer_font_family": "Iosevka Term",
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },
  "tab_bar": {
    "show": false
  },
  "scrollbar": {
    "show": "never"
  },
  "format_on_save": "off",
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "hover_popover_enabled": false,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright"]
    }
  },
  "lsp_fetch_timeout_ms": 500,
  "show_completions_on_input": true,
  "show_edit_predictions": false,
  "show_prediction_on_input": false,
  "show_whitespace": false,
  "preferred_line_length": 120,
  "soft_wrap": "preferred_line_length",
  "wrap_guides": [120],
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "terminal": {
    "copy_on_select": true,
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["--rcs"]
      }
    }
  },
  "project_panel": {
    "default_width": 80
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  }
}
